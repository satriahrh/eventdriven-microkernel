    "version": "0.2.0",
    "configurations": [
        {
            "name": "Restful",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./main.go",
            "args": ["restful"],
            "showLog": true,
            "env": {
                "GOPATH": "${workspaceFolder}",
                "GOROOT": "/usr/local/go", // Adjust this path to your Go installation
                "PATH": "${env:PATH}:/usr/local/go/bin" // Ensure Go binaries are in the PATH
